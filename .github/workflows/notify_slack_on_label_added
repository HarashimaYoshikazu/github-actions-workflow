name: Notify Slack with Mention

on:
  pull_request:
    types:
      - labeled

jobs:
  notify_slack:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v2

      - name: Notify Slack
        if: |
          (
            (github.event.action == 'labeled' && github.event.label.name == 'bug')
            ||
            (github.event.action == 'synchronize' && contains(github.event.pull_request.labels.*.name, 'bug'))
          )
        env:
          SLACK_WEBHOOK_URL: ${{ secrets.SLACK_WEBHOOK_URL }}
          SLACK_MENTION: "@channel"  # メンションを追加
        run: |
          label_name="${{ github.event.label.name }}"
          pr_number="${{ github.event.number }}"
          pr_url="${{ github.event.pull_request.html_url }}"
          message="Label added to PR: $label_name\nPR: $pr_url"
          curl -X POST -H 'Content-type: application/json' --data "{'text':'$message'}" $SLACK_WEBHOOK_URL
